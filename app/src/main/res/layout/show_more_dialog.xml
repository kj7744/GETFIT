<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round"
    android:padding="20dp"
    app:behavior_hideable="true"
    android:layout_marginTop="10dp"
    android:elevation="1dp"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/viewround"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bmimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/bmname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bmimg"
            android:textSize="21sp"
            android:text="This is Name" />

        <TextView
            android:id="@+id/bmdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bmname"
            android:textSize="21sp"
            android:text="This is Desc" />
        <TextView
            android:id="@+id/bmgen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bmdesc"
            android:textSize="21sp"
            android:text="This is gender" />
        <TextView
            android:id="@+id/bmexp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bmgen"
            android:textSize="21sp"
            android:text="This is exp" />
        <TextView
            android:id="@+id/bmprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bmexp"
            android:textSize="21sp"
            android:text="This is price" />


        <Button
            android:id="@+id/bmbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmprice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/centre_button"
            android:text="Close"
            android:textSize="21sp"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </RelativeLayout>
</RelativeLayout>
