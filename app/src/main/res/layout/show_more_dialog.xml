<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/round"
    android:elevation="1dp"
    android:padding="15dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <Button
        android:id="@+id/downarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/down"
        android:textAllCaps="false" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/viewround" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/bmimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/bmname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmimg"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="This is Name"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/bmdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmname"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="This is Desc"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/bmgen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmdesc"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="This is gender"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/bmexp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmgen"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="This is exp"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/bmprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmexp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="This is price"
            android:textSize="21sp" />


        <Button
            android:id="@+id/bmbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmprice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/centre_button"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="21sp" />


    </RelativeLayout>
</RelativeLayout>
